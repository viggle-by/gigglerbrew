#!/usr/bin/env ruby
require_relative '../giggler_lib'

cmd = ARGV[0]
package = ARGV[1]

case cmd
when "install"
  Gigglercraft.install(package)
when "remove"
  Gigglercraft.remove(package)
when "list"
  Gigglercraft.list
when "info"
  Gigglercraft.info(package)
when "search"
  Gigglercraft.search(package)
when "update"
  Gigglercraft.update_registry
when "count"
  puts Gigglercraft.package_count
else
  Gigglercraft.help
end
